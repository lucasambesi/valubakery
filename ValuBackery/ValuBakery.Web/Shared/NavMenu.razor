<link href="https://use.fontawesome.com/releases/v5.14.0/css/all.css" rel="stylesheet">

<MudPaper Width="250px" Class="d-inline-flex flex-column py-4 px-2" Elevation="0" Style="height: 100%; width:100%">
    <!-- Header con logo y nombre -->


    <!-- Navegación -->
    <MudNavMenu Class="mud-width-full">

        <!-- HEADER -->
        <div class="d-flex flex-column align-items-center mb-4">
            <MudAvatar Image="images/valubbakery_rounded.png"
                       Size="Size.Large"
                       Style="width: 96px; height: 96px;"
                       Class="mb-2 elevation-3" />
        </div>

        <!-- SECCIÓN: GENERAL -->
        <MudText Typo="Typo.subtitle2" Class="px-3 text-uppercase mud-text-secondary mt-2 mb-1">
            General
        </MudText>
        <MudNavLink Href="/home" Icon="@Icons.Material.Filled.Dashboard">Inicio</MudNavLink>
        <MudNavLink Href="/orders" Disabled="true" Icon="@Icons.Material.Filled.Inbox">Pedidos</MudNavLink>
        <MudNavLink Href="/quotes" Disabled="true" Icon="@Icons.Material.Outlined.RequestQuote">Presupuestos</MudNavLink>
        <MudNavLink Href="/events" Disabled="true" Icon="@Icons.Material.Filled.Event">Eventos</MudNavLink>
        
        <MudDivider Class="my-3" />
        
        <!-- SECCIÓN: BAKERY -->
        <MudText Typo="Typo.subtitle2" Class="px-3 text-uppercase mud-text-secondary mt-2 mb-1">
            Bakery
        </MudText>

        <MudNavLink Href="/products" Icon="@Icons.Material.Filled.ListAlt">Productos</MudNavLink>
        <MudNavLink Href="/recipes" Icon="@Icons.Material.Filled.MenuBook">Recetas</MudNavLink>
        <MudNavLink Href="/ingredients" Icon="@Icons.Material.Filled.Interests">Ingredientes</MudNavLink>
        <MudNavLink Href="/materials" Icon="@Icons.Material.Outlined.Redeem">Materiales</MudNavLink>

        <MudDivider Class="my-3" />
        
        <!-- SECCIÓN: FINANZAS -->
        <MudText Typo="Typo.subtitle2" Class="px-3 text-uppercase mud-text-secondary mt-2 mb-1">
            Finanzas
        </MudText>
        <MudNavLink Href="/movements" Disabled="true" Icon="@Icons.Material.Outlined.AddCard">Movimientos</MudNavLink>
        <MudNavLink Href="/stats" Disabled="true" Icon="@Icons.Material.Outlined.Equalizer">Estadisticas</MudNavLink>

        <MudDivider Class="my-3" />

        <!-- SECCIÓN: CONFIGURACIÓN -->
        <MudText Typo="Typo.subtitle2" Class="px-3 text-uppercase mud-text-secondary mt-2 mb-1">
            Configuración
        </MudText>
        <MudNavLink Href="/clients" Disabled="true" Icon="@Icons.Material.Outlined.Groups">Clientes</MudNavLink>
        <MudNavLink Href="/suppliers" Disabled="true" Icon="@Icons.Material.Outlined.LocalShipping">Proveedores</MudNavLink>
        <MudNavLink Href="/users" Disabled="true" Icon="@Icons.Material.Outlined.People">Usuarios</MudNavLink>
        <MudNavLink Href="/settings" Disabled="true" Icon="@Icons.Material.Filled.Settings">Configuración</MudNavLink>

    </MudNavMenu>

</MudPaper>