@inherits LayoutComponentBase

<MudDialogProvider />
<MudSnackbarProvider MaxDisplayedSnackbars="3" PreventDuplicates="true">
    <MudLayout>

        <MudAppBar Color="Color.Primary" Elevation="4">
            <MudText Typo="Typo.h6">ValuBakery</MudText>
        </MudAppBar>

        <MudDrawer Variant="DrawerVariant.Mini" Open="true">
            <MudNavMenu>
                <MudNavLink Href="/" Icon="@Icons.Material.Filled.Home">Home</MudNavLink>
                <MudNavLink Href="/users" Icon="@Icons.Material.Filled.Person">Users</MudNavLink>
            </MudNavMenu>
        </MudDrawer>

        <MudMainContent>
            @Body
        </MudMainContent>

    </MudLayout>
</MudSnackbarProvider>
