<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.AddCircleOutline" Class="mr-3 mb-n1" />
            Nueva receta
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudGrid Spacing="3">
            <MudItem xs="12">
                <MudTextField @bind-Value="@RecipeDto.Name" Label="Nombre" Variant="Variant.Outlined"/>
            </MudItem>
            <MudItem xs="12">
                <MudTextField Lines="3" @bind-Value="@RecipeDto.Description" Label="Descripción" Variant="Variant.Outlined" />
            </MudItem>
        </MudGrid>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Error" OnClick="@(() => Submit())">Crear</MudButton>
    </DialogActions>
</MudDialog>