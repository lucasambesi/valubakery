<MudDialog Class="px-3 pb-1">
    <TitleContent>
        <MudStack Row="true" Justify="Justify.FlexStart" AlignItems="AlignItems.Center">
            <MudText Typo="Typo.h6" Align="Align.Center" Class="fw-bold">
                Nueva receta
            </MudText>
        </MudStack>
    </TitleContent>

    <DialogContent>
        <MudGrid Spacing="3">
            <MudItem xs="12">
                <MudTextField @bind-Value="@CreateRecipeModel.Name"
                              Label="Nombre"
                              Variant="Variant.Outlined"
                              Immediate="true"
                              OnKeyDown="HandleEnterKey"
                              MaxLength="100"
                              OnBlur="() => CapitalizeName()" />
            </MudItem>

            <MudItem xs="12">
                <MudTextField Lines="3"
                              @bind-Value="CreateRecipeModel.Description"
                              Label="Descripción"
                              Variant="Variant.Outlined"
                              OnKeyDown="HandleEnterKey"                              
                              Immediate="true"
                              MaxLength="150"
                              OnBlur="() => CreateRecipeModel.Description = CreateRecipeModel.Description?.Trim()" />
            </MudItem>

            <MudItem xs="12" md="6">
                <MudSelect T="string"
                           @bind-Value="CreateRecipeModel.Size"
                           Label="Tamaño"
                           Variant="Variant.Outlined"
                           Immediate="true"
                           OnBlur="() => CreateRecipeModel.Size = CreateRecipeModel.Size?.Trim()">
                    @foreach (var option in SizeOptions)
                    {
                        <MudSelectItem Value="@option.Key">@option.Value</MudSelectItem>
                    }
                </MudSelect>
            </MudItem>

            <MudItem xs="12" md="6">
                <MudSelect T="string"
                           @bind-Value="CreateRecipeModel.Portions"
                           Label="Porciones"
                           Variant="Variant.Outlined"
                           Immediate="true"
                           OnKeyDown="HandleEnterKey"
                           OnBlur="() => CreateRecipeModel.Portions = CreateRecipeModel.Portions?.Trim()">
                    @foreach (var option in PortionOptions)
                    {
                        <MudSelectItem Value="@option.Key">@option.Value</MudSelectItem>
                    }
                </MudSelect>
            </MudItem>
        </MudGrid>
    </DialogContent>

    <DialogActions>
        <MudButton Color="Color.Primary" OnClick="Submit">Crear</MudButton>
    </DialogActions>

</MudDialog>
