@page "/users"

<MudTable Items="@users" Hover="true" Bordered="true" Striped="true">
    <HeaderContent>
        <MudTh>ID</MudTh>
        <MudTh>Nombre</MudTh>
        <MudTh>Email</MudTh>
        <MudTh>Registrado</MudTh>
    </HeaderContent>
    <RowTemplate>
        <MudTd DataLabel="ID">@context.Id</MudTd>
        <MudTd DataLabel="Nombre">@context.Name</MudTd>
        <MudTd DataLabel="Email">@context.Email</MudTd>
        <MudTd DataLabel="Registrado">@context.CreatedAt.ToShortDateString()</MudTd>
    </RowTemplate>
</MudTable>

