<MudDialog Class="px-3 pb-1">
    <TitleContent>
        <MudStack Row="true" Justify="Justify.FlexStart" AlignItems="AlignItems.Center">
            <MudText Typo="Typo.h6" Align="Align.Center" Class="fw-bold">
                Nueva variante
            </MudText>
        </MudStack>
    </TitleContent>

    <DialogContent>
        <MudGrid Spacing="3">
            <MudItem xs="12" md="6">
                <MudTextField @bind-Value="CreateRecipeModel.VarianteName"
                              Label="Nombre"
                              Variant="Variant.Outlined"
                              OnKeyDown="HandleEnterKey"
                              Immediate="true"
                              MaxLength="200"
                              OnBlur="() => CreateRecipeModel.VarianteName = CreateRecipeModel.VarianteName?.Trim()" />
            </MudItem>

            <MudItem xs="12" md="6">
                <MudTextField @bind-Value="CreateRecipeModel.Portions"
                              Label="Porciones"
                              Variant="Variant.Outlined"
                              OnKeyDown="HandleEnterKey"
                              Immediate="true"
                              MaxLength="200"
                              OnBlur="() => CreateRecipeModel.Portions = CreateRecipeModel.Portions?.Trim()" />
            </MudItem>
        </MudGrid>
    </DialogContent>

    <DialogActions>
        <MudButton Color="Color.Primary" OnClick="Submit">Crear</MudButton>
    </DialogActions>

</MudDialog>
