<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6" Class="nested fw-bold">
            <MudIcon Icon=@Icons.Material.Outlined.Calculate />
            @Title
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudGrid Spacing="3">
            <MudItem xs="12">
                <MudNumericField @bind-Value=@_nestedCost Label=@FirstField Variant="Variant.Outlined"/>
            </MudItem>
            <MudItem xs="12">
                <MudNumericField @bind-Value=@_nestedQuantity Label=@SecondField Variant="Variant.Outlined" />
            </MudItem>
            </MudGrid>
    </DialogContent>
    <DialogActions>
        <MudButton Color="Color.Primary" OnClick="Submit">Confirmar</MudButton>
    </DialogActions>
</MudDialog>