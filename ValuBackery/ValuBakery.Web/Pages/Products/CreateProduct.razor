@using ValuBakery.Data.Enums;
<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.AddCircleOutline" Class="mr-3 mb-n1" />
            Nuevo producto
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudGrid Spacing="3">
            <MudItem xs="12">
                <MudTextField @bind-Value="@ProductDto.Name" Label="Nombre" Variant="Variant.Outlined" />
            </MudItem>
            <MudItem xs="12">
                <MudTextField @bind-Value="@ProductDto.Description" Lines="3" Label="Descripción" Variant="Variant.Outlined" />
            </MudItem>
            <MudItem xs="6">
                <MudNumericField @bind-Value="@ProductDto.ApplyProfitToRecipes" Adornment="Adornment.Start" AdornmentIcon="@Icons.Material.Filled.Percent" Label="Ganancia de recetas" Min="0" Variant="Variant.Outlined" />
            </MudItem>
            <MudItem xs="6">
                <MudNumericField @bind-Value="@ProductDto.ApplyProfitToMaterials" Adornment="Adornment.Start" AdornmentIcon="@Icons.Material.Filled.Percent" Label="Ganancia de materiales" Min="0" Variant="Variant.Outlined" />
            </MudItem>
        </MudGrid>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Error" OnClick="@(() => Submit())">Crear</MudButton>
    </DialogActions>
</MudDialog>