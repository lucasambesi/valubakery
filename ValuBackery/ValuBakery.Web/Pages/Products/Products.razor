@page "/products"

@using MudBlazor
@using ValuBakery.Data.DTOs;
@using ValuBakery.Web.Pages.Common
@using ValuBakery.Web.Pages.Products.Desktop
@using ValuBakery.Web.Pages.Products.Mobile
@inject ISnackbar Snackbar

<PageTitle>Productos</PageTitle>

@if (!isInitialized)
{
    <Overlay />
}
else
{
    @if (isMobile)
    {
        <ProductsMobile />
    }
    else
    {
        <ProductsDesktop />
    }
}