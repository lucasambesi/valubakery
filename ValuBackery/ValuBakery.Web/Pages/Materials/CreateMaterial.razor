@using ValuBakery.Data.Enums;
<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.AddCircleOutline" Class="mr-3 mb-n1" />
            Nuevo material
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudGrid Spacing="3">
            <MudItem xs="12">
                <MudTextField @bind-Value="@MaterialDto.Name" Label="Nombre" Variant="Variant.Outlined" />
            </MudItem>
            <MudItem xs="12">
                <MudTextField @bind-Value="@MaterialDto.CostPerUnit" Label="Costo por unidad" Variant="Variant.Outlined" />
            </MudItem>
            <MudItem xs="12">
                <MudSelect T="UnitMaterialEnum" Label="Unidad de medida" Variant="Variant.Outlined"
                           LockScroll="true"
                           MultiSelection="false" @bind-Value=@MaterialDto.Unit>
                    @foreach (UnitMaterialEnum unit in Enum.GetValues(typeof(UnitMaterialEnum)))
                    {
                        if (unit != UnitMaterialEnum.None)
                        {
                            <MudSelectItem T="UnitMaterialEnum" Value="@unit">
                                <MudText>
                                    @unit
                                </MudText>
                            </MudSelectItem>
                        }
                    }
                </MudSelect>
            </MudItem>
        </MudGrid>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Error" OnClick="@(() => Submit())">Crear</MudButton>
    </DialogActions>
</MudDialog>