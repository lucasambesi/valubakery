@using ValuBakery.Data.DTOs
@using ValuBakery.Data.Enums
@using MudBlazor

<MudDialog>

    <TitleContent>
        <MudText Typo="Typo.h6" Align="Align.Center" Class="fw-bold">Editar Ingrediente</MudText>
    </TitleContent>

    <DialogContent>
        <MudGrid Spacing="3">
            <MudItem xs="12">
                <MudNumericField T="decimal"
                         Label="Costo actual"
                        Variant="Variant.Outlined"
                         @bind-Value="IngredientDto.CostPerUnit"
                         Required="true"
                         ReadOnly="true"
                         Min="0"
                         For="@(() => IngredientDto.CostPerUnit)"
                         Margin="Margin.Normal" />
            </MudItem>

            <MudItem xs="12">
                <MudTextField @bind-Value="@NewCost"
                              Label="Nuevo costo por unidad"
                              Variant="Variant.Outlined"
                              Adornment="Adornment.End"
                              AdornmentAriaLabel="Calcular"
                              AdornmentIcon="@Icons.Material.Outlined.Calculate"
                              OnAdornmentClick="OpenCalculateDialog"
                              Immediate="true"
                              OnKeyDown="HandleEnterKey" />
            </MudItem>
            <MudItem xs="12">
                <MudStack Row="true" Justify="Justify.FlexEnd">
                    <MudButton OnClick="Cancel" Variant="Variant.Text">Cancelar</MudButton>
                    <MudButton OnClick="Submit" Color="Color.Primary" Variant="Variant.Filled" StartIcon="@Icons.Material.Filled.Save">Guardar</MudButton>
                </MudStack>
            </MudItem>
        </MudGrid>
    </DialogContent>
</MudDialog>
