@using ValuBakery.Web.Pages.Ingredients.Mobile

<PageTitle>Ingredientes</PageTitle>

@if (!isInitialized)
{
    <Overlay />
}
else
{
    @if (isMobile)
    {
        <IngredientsMobile />
