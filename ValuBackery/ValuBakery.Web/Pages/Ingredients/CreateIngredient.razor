@using ValuBakery.Data.Enums;
<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.AddCircleOutline" Class="mr-3 mb-n1" />
            Nuevo ingrediente
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudGrid Spacing="3">
            <MudItem xs="12">
                <MudTextField @bind-Value="@IngredientDto.Name" Label="Nombre" Variant="Variant.Outlined"/>
            </MudItem>
            <MudItem xs="12">
                <MudTextField @bind-Value="@IngredientDto.CostPerUnit" Label="Costo por unidad" Variant="Variant.Outlined" />
            </MudItem>
            <MudItem xs="12">
                <MudSelect T="UnitEnum" Label="Unidad de medida" Variant="Variant.Outlined"
                   LockScroll="true"
                   MultiSelection="false" @bind-Value=@IngredientDto.Unit>
                    @foreach (UnitEnum unit in Enum.GetValues(typeof(UnitEnum)))
                    {
                        if(unit != UnitEnum.None)
                        {                            
                            <MudSelectItem T="UnitEnum" Value="@unit">
                                <MudText>
                                    @unit
                                </MudText>
                            </MudSelectItem>
                        }
                    }
                </MudSelect>
            </MudItem>
        </MudGrid>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Error" OnClick="@(() => Submit())">Crear</MudButton>
    </DialogActions>
</MudDialog>