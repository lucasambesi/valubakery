@using ValuBakery.Data.Enums;
@using MudBlazor

<MudDialog Class="px-3">
    <TitleContent>
        <MudStack Row="true" Justify="Justify.FlexStart" AlignItems="AlignItems.Center">
            <MudText Typo="Typo.h6" Class="ms-1 fw-bold" >Detalle</MudText>
        </MudStack>
    </TitleContent>

    <DialogContent>
        <MudStack Spacing="3">
            <MudStack Row="true" Justify="Justify.SpaceBetween" AlignItems="AlignItems.Center">
                <MudStack Row="true" Spacing="1" AlignItems="AlignItems.Center">
                    <MudIcon Icon="@Icons.Material.Filled.LocalDining" Color="Color.Primary" />
                    <MudText Typo="Typo.body1" Class="fw-semibold">Nombre</MudText>
                </MudStack>
                <MudTooltip Text="@IngredientDto.Name">
                    <MudText Typo="Typo.body1" Align="Align.Right" Class="text-truncate" Style="max-width: 150px;">
                                        @IngredientDto.Name
                    </MudText>
                </MudTooltip>

            </MudStack>

            <MudDivider />

            <MudStack Row="true" Justify="Justify.SpaceBetween" AlignItems="AlignItems.Center">
                <MudStack Row="true" Spacing="1" AlignItems="AlignItems.Center">
                    <MudIcon Icon="@Icons.Material.Filled.AttachMoney" Color="Color.Secondary" />
                    <MudText Typo="Typo.body1" Class="fw-semibold">Costo</MudText>
                </MudStack>
                <MudStack Row="true" AlignItems="AlignItems.Center" Spacing="1">
                    <MudText Typo="Typo.body1" Color="Color.Secondary">
                        $@IngredientDto.CostPerUnit.ToString("N2")
                    </MudText>

                    <div @onclick:stopPropagation="true">
                        <MudIconButton Icon="@Icons.Material.Filled.Edit"
                                       Size="Size.Small"
                                       Color="Color.Secondary"
                                       OnClick="@(() => EditIngredientCost(IngredientDto))" />
                    </div>
                </MudStack>
            </MudStack>

            <MudDivider />

            <MudStack Row="true" Justify="Justify.SpaceBetween" AlignItems="AlignItems.Center">
                <MudStack Row="true" Spacing="1" AlignItems="AlignItems.Center">
                    <MudIcon Icon="@Icons.Material.Filled.Scale" Color="Color.Tertiary" />
                    <MudText Typo="Typo.body1" Class="fw-semibold">Unidad</MudText>
                </MudStack>
                <MudChip Color="Color.Primary" Variant="Variant.Outlined" Size="Size.Small">
                    @IngredientDto.Unit
                </MudChip>
            </MudStack>

            <MudDivider />

            <MudStack Row="true" Justify="Justify.SpaceBetween" AlignItems="AlignItems.Center">
                <MudStack Row="true" Spacing="1" AlignItems="AlignItems.Center">
                    <MudIcon Icon="@Icons.Material.Filled.CheckCircle" Color="@((IngredientDto.IsDeleted ? Color.Error : Color.Success))" />
                    <MudText Typo="Typo.body1" Class="fw-semibold">Estado</MudText>
                </MudStack>
                <MudText Typo="Typo.body2" Class="@((IngredientDto.IsDeleted ? "text-error" : "text-success"))">
                    @(IngredientDto.IsDeleted ? "Inactivo" : "Activo")
                </MudText>
            </MudStack>

            <MudDivider />

            <MudStack Row="true" Justify="Justify.SpaceBetween" AlignItems="AlignItems.Center">
                <MudStack Row="true" Spacing="1" AlignItems="AlignItems.Center">
                    <MudIcon Icon="@Icons.Material.Filled.Schedule" Color="Color.Info" />
                    <MudText Typo="Typo.body1" Class="fw-semibold">Modificado</MudText>
                </MudStack>
                <MudText Typo="Typo.body2" Align="Align.Right" Class="text-secondary">
                    @IngredientDto.UpdatedAt.ToString("dd/MM/yyyy HH:mm")
                </MudText>
            </MudStack>
        </MudStack>
    </DialogContent>

    <DialogActions>
    </DialogActions>
</MudDialog>