@using ValuBakery.Data.Enums;
<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            Ingrediente
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudGrid Spacing="3">
            <MudItem xs="12">
                <MudStack Row="true" AlignItems="AlignItems.Center" Justify="Justify.SpaceBetween">
                    <MudText Typo="Typo.body1">
                        Nombre: 
                    </MudText>
                    <MudText Typo="Typo.body1" Align="Align.End">
                        @IngredientDto.Name 
                    </MudText>
                </MudStack>
            </MudItem>
            <MudItem xs="12">
                <MudStack Row="true" AlignItems="AlignItems.Center" Justify="Justify.SpaceBetween">
                    <MudText Typo="Typo.body1">
                        Costo:
                    </MudText>
                    <MudText Typo="Typo.body1" Align="Align.End">
                        @IngredientDto.CostPerUnit
                    </MudText>
                </MudStack>
            </MudItem>
            <MudItem xs="12">
                <MudStack Row="true" AlignItems="AlignItems.Center" Justify="Justify.SpaceBetween">
                    <MudText Typo="Typo.body1">
                        Tipo de Unidad:
                    </MudText>
                    <MudText Typo="Typo.body1" Align="Align.End">
                        @IngredientDto.Unit
                    </MudText>
                </MudStack>
            </MudItem>
        </MudGrid>
    </DialogContent>
    <DialogActions>
    </DialogActions>
</MudDialog>